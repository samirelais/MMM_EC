{
  "data": {
    "retail_data_path": "data/online_retail.csv",
    "include_returns": false,
    "start_date": "2010-12-01",
    "end_date": "2011-12-09",
    "train_end_date": "2011-09-30",
    "test_start_date": "2011-10-01"
  },
  "preprocessing": {
    "remove_outliers": true,
    "outlier_threshold": 3,
    "fill_missing_strategy": "interpolate"
  },
  "feature_engineering": {
    "create_lag_features": true,
    "lag_periods": [1, 2, 3, 7, 14, 28],
    "create_rolling_features": true,
    "rolling_windows": [7, 14, 30],
    "create_holiday_features": true,
    "create_seasonality_features": true
  },
  "marketing_channels": [
    "tv",
    "radio",
    "print",
    "social_media",
    "search",
    "email",
    "display"
  ],
  "modeling": {
    "model_type": "lightgbm",
    "validation_strategy": "time_series_split",
    "num_validation_folds": 3,
    "hyperparameter_tuning": true,
    "random_state": 42
  },
  "optimization": {
    "budget_constraint": 100000,
    "min_channel_budget_pct": 0.05,
    "max_channel_budget_pct": 0.4,
    "optimization_method": "bayesian"
  },
  "reporting": {
    "generate_charts": true,
    "generate_html_report": true,
    "generate_pdf_report": false,
    "dashboard_port": 8501
  },
  "spark": {
    "app_name": "mmm_online_retail",
    "driver_memory": "4g",
    "executor_memory": "4g",
    "executor_cores": 2,
    "num_executors": 2
  }
}
